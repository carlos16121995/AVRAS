                    </a>
                </div>
                <button class="navbar-toggler fixo mt-2" type="button" id="menu" data-toggle="collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse col-lg-11 menu" id="navbarSite">
                    <div class="col-lg-2 my-3 my-lg-0">
                        <a href="/Home/Inicio" class="text-body nav-link texto-branco text-center">Início</a>
                    </div>
                    <div class="col-lg-2 mt-5 mt-lg-n5">
                        <a href="/Vendas/Venda" class="text-body nav-link texto-branco text-center mt-sm-5">Venda</a>
                    </div>
                    <div class="col-lg-2 my-3 my-lg-0">
                        <a href="/Usuario/Aluguel" class="text-body nav-link texto-branco text-center">Aluguel</a>
                    </div>
                    <div class="col-lg-2 my-3 my-lg-0">
                        <a href="/Mensalidades/Mensalidades" class="text-body nav-link texto-branco text-center">Mensalidades</a>
                    </div>
                    <div class="col-lg-2 my-3 my-lg-0">
                        <a href="/Usuario/Perfil" class="text-body nav-link texto-branco text-center">Perfil</a>
                    </div>
                    <div class="col-lg-2 my-5 my-lg-0">
                        @if (Context.Request.Cookies["email"] != null && Context.Request.Cookies["senha"] != null)
                        {
                            <h2><a href="/Usuario/Logout" class="text-body nav-link txt-preto texto-branco text-center" id="btn-entrar">Sair</a></h2>
                        }
                        else
                        {
                            <h2><a href="/Usuario/Index" class="text-body nav-link txt-preto texto-branco text-center" id="btn-entrar">Entrar</a></h2>
                        }
                    </div>
                </div>
            </div>
        </div>
    </nav>





