
@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_Layout_Painel.cshtml";
}
@section script {
    <script src="~/js/CadastroUsuario.js"></script>
}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-1 col-12" align="center">
            <span> <img src="~/images/socio.png" class="logo" alt="Imagem de 3 pessoas uma ao lado da outra simbolizando uma sociedade" /></span>
        </div>
        <div class="col-lg-6 col-12 align-self-center float-none">
            <h2> Cadastro de Usuário </h2><span id="carregando"></span>
        </div>
    </div>

</div>
<form class="mb-5">
    <!-- Parte 1   -->
    <div class="container d-block" id="pag1">
        <h5 class="mb-3">Dados Pessoais:</h5>
        <input type="hidden" id="id" value="" />
        <div class="row">
            <div class="form-group col-12">
                <label for="cpf">CPF:</label>
                <input type="text" class="form-control" id="cpf" value="@ViewData["Cpf"]" maxlength="14" onkeydown="javascript: fMasc( this, mCPF );" placeholder="___.___.___-__" required>
                <div class="valid-feedback" id="valida-cpf-valid">
                </div>
                <div class="invalid-feedback" id="valida-cpf">
                    CPF inválido!
                </div>
            </div>
        </div>
        <fieldset id="f1" disabled>
            <div class="row">
                <div class="form-group col-12">
                    <label for="nome">Nome:</label>
                    <input type="text" class="form-control" id="nome" onkeydown="javascript: validaNome();" placeholder="Seu nome aqui!" required>
                    <div class="valid-feedback" id="valida-nome-valid">
                    </div>
                    <div class="invalid-feedback" id="valida-nome">
                        Informe um nome com no mínimo 4 caracteres!
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" onkeydown="javascript: validaEmail();" placeholder="Seu email aqui!" required>
                    <div class="valid-feedback" id="valida-email-valid">
                        @@ Verifique Corretamente seu email. Sem ele será impossível se conectar ao sistema!
                    </div>
                    <div class="invalid-feedback" id="valida-nome">
                        Informe um email válido!
                    </div>
                </div>
            </div>

            <div class="row ">
                <div class="form-group  col-12 col-lg-6">
                    <label for="data_nascimento">Data de Nascimento:</label>
                    <input type="date" class="form-control" id="data_nascimento" required>
                    <div class="valid-feedback" id="valida-data-nascimento-valid">
                    </div>
                    <div class="invalid-feedback" id="valida-data-nascimento">
                        Informe uma data Menor que a data atual!
                    </div>
                </div>

                <div class="form-group col-12 col-lg-6">
                    <label for="telefone">Telefone:</label>
                    <input type="text" class="form-control" id="telefone" maxlength="14" onkeydown="javascript: fMasc( this, mTel );" placeholder="(__) ____-____" required>
                    <div class="valid-feedback" id="valida-telefone-valid">
                    </div>
                    <div class="invalid-feedback" id="valida-telefone">
                        Informe um número válido!
                    </div>
                </div>
            </div>
            <button class="btn btn-dark float-left my-3 " onclick="javascript: Limpar();" type="button">Limpar</button>
            <button class="btn btn-dark float-right my-3 " onclick="javascript: usuario.paginacao2();" type="button">Próximo</button>
        </fieldset>
    </div>

    <!-- Parte 2   -->

    <div class="container d-none" id="pag2">
        <h5 class="mb-3">Endereço:</h5>
        <div class="row">
            <div class="form-group col-12">
                <label for="cep">CEP:</label>
                <input type="text" maxlength="10" onkeydown="javascript: fMasc( this, mCEP );" class="form-control" id="cep" placeholder="_____-___" required>
                <div class="valid-feedback" id="valida-cep-valid">
                </div>
                <div class="invalid-feedback" id="valida-cep">
                    Cep inválido!
                </div>
            </div>
        </div>
        <fieldset id="f2" disabled>
            <div class="row">
                <div class="form-group col-lg-6 col-12">
                    <label for="cidade">Cidade:</label>
                    <input type="text" class="form-control" id="cidade" onkeydown="javascript: validaCidade();" placeholder="Informe a Cidade" required />
                    <div class="valid-feedback" id="valida-cidade-valid">
                    </div>
                    <div class="invalid-feedback" id="valida-cidade">
                    </div>
                </div>
                <div class="form-group col-lg-6  col-12">
                    <label for="bairro">Bairro:</label>
                    <input type="text" class="form-control" id="bairro" onkeydown="javascript: validaBairro();" placeholder="Informe o Bairro" required>
                    <div class="valid-feedback" id="valida-bairro-valid">
                    </div>
                    <div class="invalid-feedback" id="valida-bairro">
                    </div>
                </div>
            </div>

            <div class="row ">
                <div class="form-group col-lg-10 col-12">
                    <label for="rua">Rua:</label>
                    <input type="text" class="form-control" id="rua" placeholder="Informe a rua" required>
                    <div class="valid-feedback" id="valida-rua-valid">
                    </div>
                    <div class="invalid-feedback" id="valida-rua">
                    </div>
                </div>
                <div class="form-group col-lg-2 col-6">
                    <label for="numero">Numero:</label>
                    <input type="text" class="form-control" onkeyup="somenteNumeros(this);" id="numero" required>
                    <div class="valid-feedback" id="valida-numero-valid">
                    </div>
                    <div class="invalid-feedback" id="valida-numero">
                    </div>
                </div>
                <div class="form-group col-lg-2 col-6">
                    <label for="numero">Complemento:</label>
                    <input type="text" class="form-control" id="complemento">
                    <div class="valid-feedback" id="valida-numero-valid">
                    </div>
                </div>
            </div>
            <button class="btn btn-dark float-left my-3 pg1" onclick="javascript: usuario.paginacao1();" type="button">Anterior</button>
            <button class="btn btn-dark float-right my-3 pg3" onclick="javascript: usuario.paginacao3();" type="button">Próximo</button>
        </fieldset>



    </div>

    <!-- Parte 3   -->
    <fieldset id="f3" disabled>
        <div class="container d-none" id="pag3">
            <h5 class="mb-3">Adicionais:</h5>
            <div class="row">
                <div class="form-group col-lg-6 col-12">
                    <label for="socio">Socio:</label>
                    <select class="form-control socio" id="socio">
                        <option value="-1">Não</option>
                        <option value="1">Sim</option>
                    </select>
                    <div class="valid-feedback" id="valida-socio-valid">
                    </div>
                </div>
                <div class="form-group col-lg-6 col-12">
                    <label for="jogador">Jogador:</label>
                    <select class="form-control jogador" id="jogador">
                        <option value="-1">Não</option>
                        <option value="1">Sim</option>
                    </select>
                    <div class="valid-feedback" id="valida-jogador-valid">
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="form-group  col-12">
                    <label for="observacao">Observações:</label>
                    <textarea class="form-control" id="observacao" rows="3"></textarea>
                </div>
                <div class="valid-feedback" id="valida-observacao-valid">
                </div>
            </div>

            <div class="row ml-3">
                <div class="form-group form-check ">
                    <input type="checkbox" class="form-check-input" value="1" id="isento">
                    <label class="form-check-label" for="isento" required>Isento?</label>
                    <div class="valid-feedback" id="valida-isento-valid">
                    </div>
                </div>
            </div>

            <button class="btn btn-dark float-left my-3 pg3" onclick="javascript: usuario.paginacao2();" type="button">Anterior</button>
            <button class="btn btn-dark float-right my-3 pg1" onclick="javascript: usuario.finalizar();" type="button">Finalizar</button>
        </div>
    </fieldset>

    <div class="container d-none" id="finalizar">
        <h5 class="mb-3">Confirmação de dados:</h5>
        <div class="row">
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">CPF:</span></p><p><span id="cpfConfirma" class="col-12"></span></p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Nome:</span>   </p> <p><span id="nomeConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Email:</span>   </p> <p><span id="emailConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Data de Nascimento:</span>  </p>  <p><span id="dataNascimentoConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Telefone:</span>  </p>  <p><span id="telefoneConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Cep:</span>  </p>  <p><span id="cepConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Cidade:</span>  </p>  <p><span id="cidadeConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Bairro:</span>  </p>  <p><span id="bairroConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Rua:</span>  <p>  </p><span id="ruaConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Numero:</span>  </p>  <p><span id="numeroConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Complemento:</span>  </p>  <p><span id="complementoConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Socio:</span>  </p>  <p><span id="socioConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Jogador:</span>  </p>  <p><span id="jogadorConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p> <span class="col-12 font-weight-bold">Observações:</span>  <p>  </p><span id="observacaoConfirma" class="col-12"></span>  </p>
            </div>
            <div class="col-12 col-lg-6">
                <p><span class="col-12 font-weight-bold">Isento:</span>  <p>  </p><span id="isentoConfirma" class="col-12"></span>  </p>
            </div>
        </div>


        <button class="btn btn-dark float-left my-3 pg3" onclick="javascript: usuario.paginacao1();" type="button">Alterar</button>
        <button class="btn btn-dark float-right my-3 pg1" onclick="javascript: gravar();" type="button">Gravar</button>


    </div>



</form>
<div class="modal" id="Erro" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titulo"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="corpo">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger vermelho txt-branco" data-dismiss="modal">Okay</button>
            </div>
        </div>
    </div>
</div>