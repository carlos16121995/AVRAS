

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_Layout_Site.cshtml";
}
@section script{
    <script src="~/lib/fancybox-master/dist/jquery.fancybox.js"></script>
    <script>
        function Antenticar() {
            var form = {
                email: $("#email").val(),
                senha: $("#senha").val(),
            };

            $.ajax({
                type: 'POST',
                url: '/Usuario/Autenticar',
                data: { Email: form.email, Senha: form.senha },
                success: function (result) {
                    if (result != null && result != "") {
                        window.location.href = "/Usuario/Cadastro";
                    }
                    else {
                        $('#Erro').modal('show');
                        $('#titulo').html("Ops...");
                        $('#corpo').html("Parece que houve um problema com algum campo preenchido. Verifique se os dados foram preenchidos corretamente.");


                    }

                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $('#Erro').modal('show');
                    $('#titulo').html("Ops... Ocorreu um erro!");
                    $('#corpo').html("Tente novamente.");

                }
            });
        }
    </script>
}
